<div class="container">
  <h3 class="d-flex justify-content-center mt-4">
    個サル詳細
  </h3>
  <div class="row mt-4">
    <div class="col-lg-3">
      <%= link_to user_path(@user.id) do %>
        <%= @user.name %>
      <% end %>
    </div>
    <div class="col-lg-9">
      <div class="mb-3">
        会場：<%= @post.place %>
      </div>
      <div class="mb-3">
        日程：<%= @post.schedule %>
      </div>
      <div class="mb-3">
        内容：<br>
        <%= safe_join(@post.body.split("\n"),tag(:br)) %>
      </div>
      <div class="mb-3">
        連絡先：<%= link_to @post.contact, @post.contact %>
      </div>
      <% if @user == current_user %>
        <div>
          <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-outline-dark" %>
          <%= link_to "削除", post_path(@post.id), method: :delete, class: "btn btn-outline-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>