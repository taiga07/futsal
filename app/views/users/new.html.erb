<div class="container">
  <div class="row">
    <%= form_with model: @user, local: true do |f| %>
      <table class="table">
        <tr>
          <th colspan="2">
            <h3>新規登録</h3>
          </th>
        </tr>
        <tr>
          <div class="field">
            <th><%= f.label :name, "チーム名" %></th>
            <td><%= f.text_field :name, autofocus: true, placeholder: "チーム名" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <th><%= f.label :email, "メールアドレス" %></th>
            <td><%= f.email_field :email, autofocus: true, placeholder: "futsal@example.com" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <th><%= f.label :password, "パスワード" %></th>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <th><%= f.label :password, "パスワード（確認用）" %></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </div>
        </tr>
        <tr>
          <th colspan="2">
            <%= f.submit "登録" %>
          </th>
        </tr>
      </table>
    <% end %>
  </div>
</div>