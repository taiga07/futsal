<div class="container">
  <div class="row mt-4">
    <div class="col-lg-4">
      <h3>チームプロフィール</h3>
      <div class="team-name mt-3">
        チーム名：<%= @user.name %>
      </div>
      <% unless @user.introduction.nil? %>
        <div class="team-introduction mt-3">
          <%= safe_join(@user.introduction.split("\n"),tag(:br)) %>
        </div>
      <% end %>
      <% if @user == current_user %>
        <div>
          <%= link_to "プロフィール編集", edit_user_path(@user.id), class: "btn btn-outline-dark" %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-8">
      <h3>募集日程</h3>
      <% @posts.each do |post| %>
        <div class="mt-3 post-box">
          <div>
            会場：<%= post.place %>
          </div>
          <div>
            日程：<%= post.schedule %>
            <%= link_to "募集詳細", post_path(post.id) %>
          </div>
        </div>
      <% end %>
      <div>
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>